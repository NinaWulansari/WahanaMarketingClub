<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:text="Status Activity"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/status_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/btn_dropdown"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/grey_700"
                        android:text="Date"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/date_activity"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black_1000"
                        android:textSize="16sp"
                        android:padding="15dp"
                        android:hint="@string/hint_birth" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/grey_700"
                        android:text="Time"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/time_activity"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black_1000"
                        android:textSize="16sp"
                        android:padding="15dp"
                        android:hint="@string/hint_time" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/subject_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:hint="Subject" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="Activity Type"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/type_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/btn_dropdown"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/note_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:hint="Notes"
                    android:layout_marginBottom="15dp"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:text="Data Customer Prospect"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/nama_cp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black_1000"
                        android:textSize="14sp"
                        android:padding="15dp"
                        android:hint="Acil Ananda" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/kode_cp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="@color/black_1000"
                        android:textSize="16sp"
                        android:padding="15dp"
                        android:hint="CP-0072916" />
                </RelativeLayout>
            </LinearLayout>

            <Button android:id="@+id/edit_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

